#menu-profiler span.count.count-red span {
    background-color: #a33;
}
table.ivory-http-adapter-toolbar-requests {
    margin: 5px 0;
}
.ivory-http-adapter-toolbar-requests th,
.ivory-http-adapter-toolbar-requests td {
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    padding: 0 4px;
}
.ivory-http-adapter-toolbar-requests th {
    background-color: #eee;
}
.ivory-http-adapter-toolbar-url {
    max-width: 300px;
    line-height: 9px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.ivory-http-adapter-toolbar-error {
    color: #a33;
}
.ivory-http-adapter-panel-request {
    margin: 0;
}
.ivory-http-adapter-panel-request-body {
    margin-top: 10px;
    table-layout: fixed;
}
.ivory-http-adapter-panel-request-body div {
    max-height: 300px;
    overflow: auto;
}
