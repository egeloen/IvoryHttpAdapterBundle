<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="ivory.http_adapter.message.factory.class">Ivory\HttpAdapter\Message\MessageFactory</parameter>
        <parameter key="ivory.http_adapter.event_dispatcher.class">Symfony\Component\EventDispatcher\ContainerAwareEventDispatcher</parameter>
        <parameter key="ivory.http_adapter.configuration.class">Ivory\HttpAdapter\Configuration</parameter>

        <parameter key="ivory.http_adapter.abstract.class">Ivory\HttpAdapter\AbstractHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.buzz.class">Ivory\HttpAdapter\BuzzHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.curl.class">Ivory\HttpAdapter\CurlHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.file_get_contents.class">Ivory\HttpAdapter\FileGetContentsHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.fopen.class">Ivory\HttpAdapter\FopenHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.guzzle.class">Ivory\HttpAdapter\GuzzleHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.guzzle_http.class">Ivory\HttpAdapter\GuzzleHttpHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.httpful.class">Ivory\HttpAdapter\HttpfulHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.socket.class">Ivory\HttpAdapter\SocketHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.stopwatch.class">Ivory\HttpAdapter\StopwatchHttpAdapter</parameter>
        <parameter key="ivory.http_adapter.zend1.class">Ivory\HttpAdapter\Zend1HttpAdapter</parameter>
        <parameter key="ivory.http_adapter.zend2.class">Ivory\HttpAdapter\Zend2HttpAdapter</parameter>
    </parameters>

    <services>
        <service id="ivory.http_adapter.message.factory" class="%ivory.http_adapter.message.factory.class%" />

        <service
            id="ivory.http_adapter.event_dispatcher"
            class="%ivory.http_adapter.event_dispatcher.class%"
            abstract="true"
        >
            <argument type="service" id="service_container" />
        </service>

        <service
            id="ivory.http_adapter.configuration"
            class="%ivory.http_adapter.configuration.class%"
            abstract="true"
        >
            <argument type="service" id="ivory.http_adapter.message.factory" />
        </service>

        <service id="ivory.http_adapter.abstract" class="%ivory.http_adapter.abstract.class%" abstract="true" />
    </services>
</container>
